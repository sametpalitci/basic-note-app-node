<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">

    <title>Hello, world!</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <h2 class="text-center">Abdulsamet Palitçı</h2>
                <a class="btn btn-primary float-right" href="/admin/logout">Logout</a>
                <small>Developer, <a href="https://github.com/worione">github ❤️</a>, <a
                        href="https://twitter.com/sametpalitci">twitter</a></small>

                <form action="/admin/addNote" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Add Simple Note</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="addNoteArea"
                            rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary ">Send</button>
                    </div>
                </form>
                <% if(noteData){ 
                    noteData.forEach((item,index)=>{%>
                <div class="card mt-2">
                    <div class="card-header">
                        <%- index %>
                    </div>
                    <div class="card-body">
                        <p><%- item.description %></p>
                        <div class="float-right">
                            <a href="/admin/remove/<%- item._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <p><%- item.date %></p>
                    </div>
                </div>
                <% }) } %>

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</body>

</html>